{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "types": ["node"],
        "emitDecoratorMetadata": true,
        "typeRoots": ["node_modules", "src/@types/**/**"]
    },
    "exclude": ["node_modules", "dist"]
}
